                    .flex-shrink-0.w-24.h-24.bg-indigo-100.text-indigo-500.rounded-full.inline-flex.items-center.justify-center
                        svg.w-12.h-12(fill='none' stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' viewBox='0 0 24 24')
